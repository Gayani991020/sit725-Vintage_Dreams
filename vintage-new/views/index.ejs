<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Vintage-Dreams</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div>
      <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Vintage-Dreams</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/account">My Account</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/cart"
                  >My Cart
                  <span class="badge text-bg-info"
                    ><%= cart?.items?.length %></span
                  ></a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/whishlist"
                  >My Wishlist <span class="badge text-bg-info"><%= wishlist?.items?.length %></span></a
                >
              </li>
            </ul>
            <div>
              <a class="btn btn-outline-dark" href="/login">Login/Logout</a>
            </div>
          </div>
        </div>
      </nav>
    </div>
    <div
      id="carouselExampleIndicators"
      class="carousel slide"
      data-bs-ride="true"
    >
      <div class="carousel-indicators">
        <button
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="0"
          class="active"
          aria-current="true"
          aria-label="Slide 1"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="1"
          aria-label="Slide 2"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="2"
          aria-label="Slide 3"
        ></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            src="assets/images/1.jpg"
            class="d-block w-100"
            style="height: 600px"
            alt="..."
          />
        </div>
        <div class="carousel-item">
          <img
            src="assets/images/2.jpg"
            class="d-block w-100"
            style="height: 600px"
            alt="..."
          />
        </div>
        <div class="carousel-item">
          <img
            src="assets/images/3.jpg"
            class="d-block w-100"
            style="height: 600px"
            alt="..."
          />
        </div>
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <div class="w-100 p-5 py-2 pt-4">
      <h3>Our Products</h3>
    </div>
    <div class="d-flex flex-wrap justify-content-around w-100 p-4">
      <% if (products.length > 0) { %> <% products.forEach(function(product,
      index) { %>

      <div class="card mb-2" style="width: 18rem">
        <% let photo = '/assets/images/img-not-found.png'; if(product.photo &&
        product.photo != "") {photo = "uploads/products/" + product.photo;} %>

        <img src="<%= photo %>" class="card-img-top" alt="..." />
        <div class="card-body d-flex flex-column">
          <div class="d-flex flex-column mb-auto">
            <% let small_price = 0; let medium_price = 0; let large_price= 0;
            let lowest_price = 0; product.price.forEach(price => { if(price.size
            == 'Large') { large_price = price.value; } if(price.size ==
            'Medium') { medium_price = price.value; } if(price.size == 'Small')
            { small_price = price.value; } }); if(small_price > 0 &&
            medium_price > 0 && large_price > 0) { lowest_price =
            Math.min(small_price, medium_price, large_price); } else
            if(small_price > 0 && medium_price > 0) { lowest_price =
            Math.min(small_price, medium_price); } else if(small_price > 0 &&
            large_price > 0) { lowest_price = Math.min(small_price,
            large_price); } else if(medium_price > 0 && large_price > 0) {
            lowest_price = Math.min(medium_price, large_price); } else
            if(small_price > 0) { lowest_price = small_price; } else
            if(medium_price > 0) { lowest_price = medium_price; } else
            if(large_price > 0) { lowest_price = large_price; } %>
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
            <span><strong>$ <%= lowest_price %></strong></span>
          </div>
          <div class="mt-2">
            <a
              href="#"
              class="btn btn-dark w-100 quickviewBtn"
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
              data-product-id="<%= product._id %>"
              data-lowest-price="<%= lowest_price %>"
              >View</a
            >
          </div>
        </div>
      </div>
      <% }) %> <% } else { %>
      <h6 class="fw-semibold mb-0">No products found.</h6>
      <% } %>
    </div>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Product Details
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="container-fluid">
              <div class="row">
                <div class="col-4">
                  <img
                    src="assets/images/img-not-found.png"
                    class="card-img-top"
                    alt="..."
                    id="m_product_photo"
                  />
                </div>
                <div class="col-8 d-flex flex-column">
                  <h5 class="my-2">
                    <Strong id="m_product_name">Product Name</Strong>
                  </h5>
                  <p id="m_product_description">jknksd ckjnkds vksdm</p>
                  <h5 class="my-3 mb-2">
                    $<strong id="m_product_price"> 0.00</strong>
                  </h5>
                  <div class="d-flex flex-column">
                    <div class="d-flex align-items-center">
                      <div class="row">
                        <div class="col-5">
                          <span class="">Quantity : </span>
                        </div>
                        <div class="col-7">
                          <input
                            type="number"
                            name=""
                            id="product-quantity"
                            data-product-id=""
                            value="1"
                            class="form-control w-100"
                          />
                        </div>
                      </div>
                    </div>
                    <div class="d-flex align-items-center mt-2">
                      <div class="row">
                        <div class="col-5">
                          <span class="">Size : </span>
                        </div>
                        <div class="col-7">
                          <select
                            name="sizeSelect"
                            id="sizeSelect"
                            class="form-select w-100"
                          ></select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="d-flex my-4 mt-5">
                    <button class="btn btn-dark me-2 addToCartBtn">
                      Add to Cart
                    </button>
                    <button
                      class="btn btn-outline-secondary add-wishlist"
                      data-product-id=""
                    >
                      Add to Wishlist
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"
    ></script>
    <script src="assets/jquery.min.js"></script>
    <script src="assets/sweetalert2@11.js"></script>
    <script>
      // quickviewBtn click event
      $(".quickviewBtn").on("click", function (e) {
        e.preventDefault();
        var productId = $(this).data("product-id");
        var lowestPrice = $(this).data("lowest-price");
        $.ajax({
          url: "/getProductById/" + productId,
          method: "GET",
          success: function (response) {
            if (response.status == 200) {
              var product = response.data;
              $("#product-quantity").data("product-id", product._id);
              $(".add-wishlist").data("product-id", product._id);
              $("#m_product_name").html(product.name);
              $("#m_product_description").html(product.description);
              $("#m_product_price").html(lowestPrice);
              // if product.photo is not empty
              if (product.photo && product.photo != "") {
                $("#m_product_photo").attr(
                  "src",
                  "uploads/products/" + product.photo
                );
              } else {
                $("#m_product_photo").attr("src", "images/img-not-found.png");
              }
              // get available prices from product.sizes
              var prices = product.price;
              // get sizeSelect element
              var sizeSelect = $("#sizeSelect");
              // set data-lowest-price attribute to sizeSelect
              sizeSelect.data("lowest-price", lowestPrice);
              // clear sizeSelect
              sizeSelect.html("");
              // loop through prices
              prices.forEach(function (price, index) {
                var selected = "";
                if (price.value == lowestPrice) {
                  selected = "selected";
                }
                // add option to sizeSelect
                sizeSelect.append(
                  '<option data-price="' +
                    price.value +
                    '" data-size="' +
                    price.size +
                    '" ' +
                    selected +
                    ' value="' +
                    price.size +
                    '">' +
                    price.size +
                    "</option>"
                );
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: "Something went wrong.",
              });
            }
          },
          error: function (err) {
            Swal.fire({
              icon: "error",
              title: "Error",
              text: "Something went wrong.",
            });
          },
        });
      });

      // sizeSelect on change
      $("#sizeSelect").on("change", function () {
        // get selected option
        var selectedOption = $(this).find(":selected");
        // get price from selected option
        var price = selectedOption.data("price");
        // get size from selected option
        var size = selectedOption.data("size");
        // set product price
        $("#m_product_price").html(price);
      });

      // .addToCartBtn btn click event
      $(".addToCartBtn").on("click", function (e) {
        var productId = $("#product-quantity").data("product-id");
        var quantity = $("#product-quantity").val();
        var size = $("#sizeSelect").val();
        var price = $("#sizeSelect").find(":selected").data("price");
        if (quantity > 0) {
          var data = {
            items: {
              product: productId,
              quantity: quantity,
              size: size,
              price: price,
            },
          };
          $.ajax({
            url: "/cart",
            method: "POST",
            contentType: "application/json", // Set the content type to JSON
            data: JSON.stringify(data), // Stringify the data
            success: function (response) {
              if (response.status == 201) {
                // show success message
                Swal.fire({
                  icon: "success",
                  title: "Success",
                  text: "Product added to cart successfully.",
                  showConfirmButton: false,
                  timer: 1500,
                });
                // redirect to login page
                setTimeout(function () {
                  location.reload();
                }, 1000);
              } else {
                // show error message
                Swal.fire({
                  icon: "error",
                  title: "Error",
                  text: "Unabled to add to cart! If you're not logged in, please log in to add product to cart.",
                });
              }
            },
            error: function (err, xhr, status) {
              // show error message
              Swal.fire({
                icon: "error",
                title: "Error",
                text: "Something Went wrong! If you're not logged in, please log in to add product to cart.",
              });
            },
          });
        } else {
          // show error message
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "Quantity must be greater than 0.",
          });
        }
      });

      // .add-wishlist btn click event
      $(".add-wishlist").click(function () {
        var productId = $(this).data("product-id");
        $.ajax({
          url: "/wishlist",
          method: "POST",
          contentType: "application/json", // Set the content type to JSON
          data: JSON.stringify({ product: productId }), // Stringify the data
          success: function (response) {
            if (response.status == 201 || response.status == 200) {
              // show success message
              Swal.fire({
                icon: "success",
                title: "Success",
                text: "Product added to wishlist successfully.",
              });
            } else {
              // show error message
              Swal.fire({
                icon: "warning",
                title: "Warning",
                text: response.message
                  ? response.message
                  : "Unabled to add to wishlist! If you're not logged in, please log in to add product to wishlist.",
              });
            }
          },
          error: function (err, xhr, status) {
            // show error message
            Swal.fire({
              icon: "error",
              title: "Error",
              text: "Something Went wrong! If you're not logged in, please log in to add product to wishlist.",
            });
          },
        });
      });
    </script>
  </body>
</html>
